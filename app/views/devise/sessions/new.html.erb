<div class="col-sm-6 col-sm-offset-3 contain">
<h2 class="center">Sign in</h2>
<div class="center omniauthbox">
  <%= link_to "Sign in with Twitter", omniauth_authorize_path(User, "twitter"), class: "btn btn-info" %>
<h3>or</h3>
</div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control', autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
  </div>

  <div class="col-sm-6" style="padding-left:0px">
  <% if devise_mapping.rememberable? -%>
      <%= f.check_box :remember_me %><span class="remember"> Rememeber Me</span>
  <% end -%>
  </div>
  <div class="col-sm-6 right" style="padding-right:0px">
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "forgot" %><br />
  </div>
  <div class="clearfix"></div>

  <div class="actions">
    <%= f.submit "Sign in", class: 'btn btn-success' %>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
</div>

<div class="clearfix"></div>