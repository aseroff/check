
<style>
    .ui-helper-hidden-accessible { display: none }
    #results ul { list-style-type: none; padding: 0; border: 1px solid; }
    #results li { padding: 5px; }
</style>

<script type="text/javascript">
  $(function() {   
    $('#games').autocomplete({
            minLength: 2,
            source: '<%= games_path(:json) %>',
            appendTo: '#results' }).autocomplete("instance")._renderItem = function( ul, item ) {
              return $( "<li>" )
                .append( "<a href='/games/" + item.id + "'>" + item.title + "</a>" )
                .appendTo (ul);
    };
  });
</script>

<div class="ui-widget">
<input id="games" class="form-control" placeholder="Search for a game">
<div id="results"></div>
</div>