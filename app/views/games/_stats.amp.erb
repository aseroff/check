<div class="stats col-xs-12">
	<div class="col-xs-4" title="Total Check-ins">
		<span class='glyphicon glyphicon-expand'></span> <%= @posts_count ? @posts_count : game.posts.size %>
	</div>
	<div class="col-xs-4" title='Number of Times Favorited'>
		<span class='glyphicon glyphicon-heart'></span> <%= @favorites_count ? @favorites_count : game.favorites.size %>
	</div>
	<div class="col-xs-4" title='Users Who Own'>
		<span class='glyphicon glyphicon-home'></span> <%= @owned_count ? @owned_count : game.owned.size %>
	</div>
</div>

<div class="clearfix"></div>