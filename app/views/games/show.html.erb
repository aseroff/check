<%= content_for(:title, @game.title) %>

<div class="game">

<div class="col-sm-5 contain profile">
	<%= render 'profile' %>
	<%= render 'controls' %>
	<%= render 'stats', game: @game %>
	<div class="clearfix"></div>
	<hr>
	<p class="left description">
  		<strong>Description:</strong>
  		<%= @game.description %>
	</p>
</div>

<div class="feed col-sm-7">

<div id="posts">
	<%= render @posts %>
</div>

<div id="infinite-scrolling">
	<%= will_paginate @posts %>
</div>

</div>
</div>
<%= render 'modal' if current_user %>