<%= content_for(:title, @game.title) %>
<div class="profile col-md-6">
<% #cache @game do %>
<%= render 'profile' %>
<% #end %>

<%= render 'controls' %>
<div class="stats col-xs-12">
<div class="col-xs-4">
<span class='glyphicon glyphicon-expand' aria-hidden='true'></span> <%= @posts_count %>
</div>
<div class="col-xs-4">
<span class='glyphicon glyphicon-star' aria-hidden='true'></span> <%= @favorites_count %>
</div>
<div class="col-xs-4">
<span class='glyphicon glyphicon-home' aria-hidden='true'></span> <%= @owned_count %>
</div>
</div>

<div class="clearfix"></div>
<hr>

<p>
  <strong>Description:</strong>
  <%= @game.description %>
</p>

</div>

<div class="feed col-md-6">
<h3>Check-ins</h3>

<div id="posts">
	<%= render @posts %>
</div>

<div id="infinite-scrolling">
	<%= will_paginate @posts %>
</div>

</div>

<div id="checkin" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">New Check-in to <%= @game.title %></h4>
      </div>
      <div class="modal-body">
    <%= render 'posts/form', post: Post.new(game_id: @game.id, user_id: current_user.id) %>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<script>
$('#checkin').modal('hide')
</script>