<h2><%= @game.title %></h2>
<%= image_tag(@game.img_url, width:'100px') %><br>
<%= @game.year %><br>
<%= link_to "View on BoardGameGeek", ("https://www.boardgamegeek.com/boardgame/" + @game.id.to_s) %><br>

<br>

Total times checked into: <%= @game.posts.size %><br>

<p>
  <strong>Description:</strong>
  <%= @game.description %>
</p>

<%= link_to 'check in', new_post_path(game_id: @game.id) %><br>
<% if current_user && current_user.favorited?(@game) %>
Favorited
<% else %>
<%= link_to 'favorite', new_relation_path(related_id: @game.id, relationship: "favorite") %><br>
<% end %>
<% if current_user.owns?(@game) %>
Owned
<% else %>
<%= link_to 'mark owned', new_relation_path(related_id: @game.id, relationship: "owned") %><br>
<% end %>

<hr>

<table>
  <tbody>
    <% @game.posts.each do |post| %>
      <tr>
        <td><%= image_tag(post.game.img_url, width:'100px') %></td>
        <td><h4><%= link_to post.user.display_name, post.user %> checked into <%= link_to post.game.title, post.game %></h4>
        <%= post.text %><br><br>
        <%= link_to ('on ' + post.created_at.strftime("%B %d %Y")), post %><br>
        <%= post.nice_count %> <%= link_to 'Nice', new_relation_path(related_id: post.id, relationship: "nice") %><br></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', games_path %>