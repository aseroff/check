<div class="game">
<%= content_for(:title, @game.title) %>
<div class="profile col-md-6 contain">
<% #cache @game do %>
<%= render 'profile' %>
<% #end %>

<%= render 'controls' %>
<div class="stats col-xs-12">
<div class="col-xs-4" title="Total Check-ins">
<span class='glyphicon glyphicon-expand'></span> <%= @posts_count %>
</div>
<div class="col-xs-4" title='Number of Times Favorited'>
<span class='glyphicon glyphicon-star'></span> <%= @favorites_count %>
</div>
<div class="col-xs-4" title='Users Who Own'>
<span class='glyphicon glyphicon-home'></span> <%= @owned_count %>
</div>
</div>

<div class="clearfix"></div>
<hr>

<p class="description">
  <strong>Description:</strong>
  <%= @game.description %>
</p>

</div>

<div class="feed col-md-6">
<h3 class="col-sm-12">Check-ins</h3>

<div id="posts">
	<%= render @posts %>
</div>

<div id="infinite-scrolling">
	<%= will_paginate @posts %>
</div>

</div>
</div>
<%= render 'modal' if current_user %>