<div class="col-md-6">
<%= image_tag(@game.img_url.medium) %>
<h2><%= @game.title %> <span class="year"><%= @game.year %></span></h2>
<%= link_to 'check in', new_post_path(game_id: @game.id), class: 'btn btn-success' %>
<%= link_to "View on BoardGameGeek", ("https://www.boardgamegeek.com/boardgame/" + @game.id.to_s), class: 'btn btn-default' %><br>
Total times checked into: <%= @game.posts.size %><br>
<% if current_user && current_user.favorited?(@game) %>
Favorited
<% else %>
<%= link_to 'Mark favorite', relations_path(user_id: current_user.id,related_id: @game.id, relationship: "favorite"), method: :post %><br>
<% end %>
<% if current_user.owns?(@game) %>
Owned
<% else %>
<%= link_to 'Mark owned', relations_path(user_id: current_user.id,related_id: @game.id, relationship: "owned"), method: :post %><br>
<% end %>
<p>
  <strong>Description:</strong>
  <%= @game.description %>
</p>
</div>

<div class="col-md-6">
<h3>Check-ins</h3>
<%= render partial: "posts/display", collection: @game.posts %>

</div>