<% if current_user %>

<% @user = current_user %>
<%= content_for(:title, "Feed") %>

<div class="col-sm-4">

<div class="no-mobile profile contain">
<%= render 'users/profile' %>
<%= render 'users/discovery' %>
<div class="clearfix"></div>
</div>
<div class="no-mobile">
<%= render 'application/masthead' %>
</div>
</div>

<div class="feed col-sm-7 col-sm-offset-1">

<div id="posts">
<%= render @posts %>
</div>

<div id="infinite-scrolling">
	<%= will_paginate @posts %>
</div>
</div>
<% else %>

<%= content_for(:title, "Gamekeeper") %>
<%= content_for(:description, "The Check-in App for Board Games!") %>

<div class="center contain no-gap">

<div class="intro col-lg-12 serif">
	<h1>Gamekeeper</h1>
  <h3>The Check-in App for Board Games</h3>
</div>

<div class="features col-lg-12 no-gap">
  
  <div class="feature">
  	<div class="col-xs-12 col-md-6 graphic"><%= image_tag('https://upload.wikimedia.org/wikipedia/commons/4/46/A_Game_Of_Thrones_board_game_detail.jpg', class: "fit") %></div>
  	<div class="col-xs-12 col-md-6 text">
    	<h2>Keep track of the games you play</h2>
    	<h4>and share your check-ins to social networks.</h4>
  	</div>
  </div>

  <div class="clearfix"></div>

  <div class="feature">
  	<div class="col-xs-12 col-md-6 pull-right graphic"><%= image_tag('https://static.pexels.com/photos/84663/pexels-photo-84663.jpeg', class: "fit") %></div>
  	<div class="col-xs-12 col-md-6 text">
    	<h2>See what your friends are playing</h2>
    	<h4>and find out who to challenge to a game.</h4>
  	</div>
  </div>

  <div class="clearfix"></div>

  <div class="feature">
  	<div class="col-xs-12 col-md-6 graphic"><%= image_tag('https://upload.wikimedia.org/wikipedia/commons/a/a2/Pandemic_board_game.jpg', class: "fit") %></div>
  	<div class="col-xs-12 col-md-6 text">
    	<h2>Keep your games organized</h2>
    	<h4>by adding them to your profile's lists.</h4>
  	</div>
  </div>

</div>

  <div class="clearfix"></div>

<div class="cta col-xs-12 col-md-6 col-md-offset-3">
	<%= link_to "Create an Account", new_user_registration_path, class: 'col-xs-12 btn btn-success' %>
</div>

  <div class="clearfix"></div>

</div>
<% end %>