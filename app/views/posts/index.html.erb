<% if current_user %>

<table>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= image_tag(post.game.img_url, width:'100px') %></td>
        <td><h4><%= link_to post.user.display_name, post.user %> checked into <%= link_to post.game.title, post.game %></h4>
        <%= post.text %><br><br>
        <%= link_to ('on ' + post.created_at.strftime("%B %d %Y")), post %><br>
        <%= post.nice_count %> <%= link_to 'Nice', new_relation_path(related_id: post.id, relationship: "nice") %><br></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% else %>

Join Check, the check-in app for board games!

<% end %>