<div class="col-md-3">
<div class="col-xs-12"><%= image_tag(@user.avatar, class: 'profile') %><br>
<h1><%= @user.display_name %></h1></div>
<div class="col-xs-6"><%= @following.size %> following</div>
<div class="col-xs-6"><%= @followers.size %> followers</div>
<div class="clearfix"></div>

<div class="col-xs-12">
<%= @user.favorites.size %> Favorite Games:
<ul>
<% @user.favorites.each do |f| %>
	<li><%= link_to f.title, f %></li>
<% end %>
</ul>

<%= @user.owned.size %> Owned Games:
<ul>
<% @user.owned.each do |o| %>
	<li><%= link_to o.title, o %></li>
<% end %>
</ul>

<% if current_user.follows?(@user.id) %>
Following!
<% else %>
<%= link_to 'follow', new_relation_path(relationship: "follow", related_id: @user.id) unless @user == current_user %>
<% end %>

</div>

</div>

<div class="feed col-md-9">
    <h3>Check-ins</h3>
    <%= render partial: "posts/display", collection: @user.posts %>
</div>