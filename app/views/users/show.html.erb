<%= content_for(:title, @user.display_name) %>

<div class="col-sm-4">
<div class="no-mobile fixed contain profile">
<%= render 'profile' %>
<%= render 'controls' %>
</div>

<div class="only-mobile contain profile">
<%= render 'profile' %>
<%= render 'controls' %>
</div>

</div>

<div class="feed col-sm-7 col-sm-offset-1">

<div id="post-list">
  <% unless @posts.empty? %>
    <%= render @posts %>
  <% else %>
      <div class="center padded">
        <h4><%= current_user == @user ? "You haven't" : @user.display_name + " hasn't" %> checked in to any games yet!</h4>
      </div>
  <% end %>
</div>

<div id="infinite-scrolling">
	<%= will_paginate @posts %>
</div>
</div>