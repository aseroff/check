<%= content_for(:title, "Who " + @user.username + " is following") %>
<div class="profile col-sm-4 contain">
<% #cache @user do %>
<%= render 'profile' %>
<% #end %>
<%= render 'controls' %>
</div>

<div class="feed col-sm-8">  
<h3 class="col-sm-12">Following</h3>

<div id="user-list">
<%= render @users %>
</div>

<div id="infinite-scrolling">
	<%= will_paginate @users %>
</div>
</div>