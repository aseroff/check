<%= content_for(:title, "Who " + @user.username + " is following") %>
<div class="profile col-sm-3">
<% #cache @user do %>
<%= render 'profile' %>
<% #end %>
<%= render 'controls' %>
</div>

<div class="feed col-sm-9">  
<h3>Following</h3>

<div id="posts">
<%= render @users %>
</div>

<div id="infinite-scrolling">
	<%= will_paginate @users %>
</div>
</div>