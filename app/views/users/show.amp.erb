<%= content_for(:title, @user.display_name) %>
<%= content_for(:description, @user.display_name + " on Tokens") %>

<div class="col-sm-4">

<div class="contain profile">
	<%= render 'profile.amp.erb' %>
	<%= render 'controls.amp.erb' %>
</div>

</div>

<div class="feed col-sm-8">

<div id="post-list">
  <% unless @posts.empty? %>
    <%= render @posts %>
  <% else %>
      <div class="center padded">
        <h4><%= current_user == @user ? "You haven't" : @user.display_name + " hasn't" %> checked in to any games yet!</h4>
      </div>
  <% end %>
</div>

<div id="infinite-scrolling">
	<%= will_paginate @posts %>
</div>

</div>