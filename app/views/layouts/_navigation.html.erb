<%# navigation styled for Bootstrap 3.0 %>
<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="col-xs-10 col-xs-offset-1">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

      <%= link_to "Gamekeeper", root_path, class: 'navbar-brand' %>

      <form class="navbar-form navbar-left">
        <div class="form-group">
          <input id="games" class="form-control" placeholder="Search for a game" type="text" class="form-control">
        </div>
      </form>
    </div>
      
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <%= render 'layouts/navigation_links' %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <%= render 'layouts/nav_links_for_auth' %>
      </ul>
    </div>
  </div>
</nav>

<style>
    .ui-helper-hidden-accessible { display: none }
    #results ul { list-style-type: none; padding: 0; border: 1px solid; }
    #results li { padding: 5px; }
</style>

<script type="text/javascript">
  $(function() {   
    $('#games').autocomplete({
            minLength: 2,
            source: '<%= games_path(:json) %>',
            appendTo: '#results' }).autocomplete("instance")._renderItem = function( ul, item ) {
              return $( "<li>" )
                .append( "<a href='/games/" + item.id + "'>" + item.title + "</a>" )
                .appendTo (ul);
    };
  });
</script>

<div class="ui-widget">
<input >
<div id="results"></div>
</div>