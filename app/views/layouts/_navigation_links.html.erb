      <form class="navbar-form navbar-left">
        <div class="form-group">
          <input id="games" type="text" class="form-control" placeholder="Find Game">
          <div id="results"></div>
        </div>
      </form>

<script type="text/javascript">
  $(function() {   
    $('#games').autocomplete({
            minLength: 2,
            source: '<%= games_path(:json) %>',
            appendTo: '#results' }).autocomplete("instance")._renderItem = function( ul, item ) {
              return $( "<li>" )
                .append( "<a href='/games/" + item.id + "'>" + item.title + "</a>" )
                .appendTo (ul);
    };
  });
</script>